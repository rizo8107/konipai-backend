{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist-server",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/server/**/*", "src/api/**/*", "src/lib/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
